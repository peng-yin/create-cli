{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}